{
  "name": "@hypericon/yuzu",
  "version": "0.8.0",
  "description": "Library to push UI State updates across connected clients in CI applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Ed Johnson, Hypericon Ltd",
  "license": "MIT",
  "homepage": "https://github.com/hypcn/yuzu#readme",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hypcn/yuzu.git"
  },
  "scripts": {
    "dev": "concurrently npm:dev-*",
    "dev-client": "rimraf example/client-out && vite example/client",
    "dev-server": "nodemon",
    "build": "rimraf dist && tsc -p src/tsconfig.json",
    "watch": "rimraf dist && tsc -p src/tsconfig.json -w",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test-watch": "vitest",
    "test-ui": "vitest --ui",
    "test-coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix"
  },
  "dependencies": {
    "ws": "^8.19.0"
  },
  "peerDependencies": {
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.8.0",
    "@types/mithril": "^2.0.6",
    "@types/node": "^22.19.11",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "happy-dom": "^20.6.0",
    "mithril": "^2.0.4",
    "nodemon": "^3.1.11",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^4.0.4",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist"
  ]
}
